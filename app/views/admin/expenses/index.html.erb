<p id="notice"><%= notice %></p>

<h1>Admin Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_expenses.each do |admin_expense| %>
      <tr>
        <td><%= admin_expense.name %></td>
        <td><%= admin_expense.description %></td>
        <td><%= link_to 'Show', admin_expense %></td>
        <td><%= link_to 'Edit', edit_admin_expense_path(admin_expense) %></td>
        <td><%= link_to 'Destroy', admin_expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

