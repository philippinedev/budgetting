<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Transaction type</th>
      <th>Source Account</th>
      <th>Target Account</th>
      <th>Amount</th>
      <th>Cut off</th>
      <th>Due date</th>
      <th>Actualized on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_type.name %></td>
        <td><%= transaction.source_account&.description %></td>
        <td><%= transaction.target_account.description %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.cutoff_date %></td>
        <td><%= transaction.due_date %></td>
        <td><%= transaction.actualized_on %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) unless transaction.actualized? %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } unless transaction.actualized? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

