<% if current_user %>
  <div class="container">
    <%= render 'layouts/header' %>

    <div class="messages">
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
    </div>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </div>
<% else %>
  <div class="container">

    <div class="messages">
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
    </div>

    <%= yield %>
  </div>
<% end %>
